<h3>Project: <%= @project.name %><h3>

  <h3>Project Volunteers</h3>

  <% if @project.volunteers %>
    <ul>
      <% @project.volunteers.each do |volunteer| %>
        <li><a href="/projects/<%= @project.id %>/volunteers/<%= volunteer.id %>"><%= volunteer.name %></a></li>
      <% end %>
    </ul>
  <% else %>
    <p>There are no volunteers listed for this project yet.</p>
  <% end %>

  <form action="/projects/<%= @project.id %>" method="post">
    <input name="_method" type="hidden" value="patch">

    <label for="name">Rename project</label>
    <input id="name" name="name" type="text">

    <button type="submit">Update</button>
  </form>

  <form action="/projects/<%= @project.id %>" method="post">
    <input name="_method" type="hidden" value="delete">

    <button type="submit">Delete project</button>
  </form>
  <p><a href="/projects">Return to project list</a></p>
